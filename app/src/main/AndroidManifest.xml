<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.studentapp.hoi">
    <application
        android:icon="@mipmap/ic_phone_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.studentapp.hoi.MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.studentapp.hoi.SignInActivity"
            android:label="Sign In"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.studentapp.hoi.SignInActivity"
                />
        </activity>
        <activity
            android:name="com.studentapp.hoi.CreateUserActivity"
            android:label="Create New User Account"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.studentapp.hoi.CreateUserActivity"
                />
        </activity>
        <activity
            android:name="com.studentapp.hoi.UserMenu"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Menu"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.APP_CONTACTS"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.studentapp.hoi.MessageActivity"
            android:label="Message"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.studentapp.hoi.MessageActivity"
                />
        </activity>
    </application>
</manifest>